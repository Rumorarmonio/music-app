<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicApp"
        android:usesCleartextTraffic="true">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name="com.example.musicapp.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.musicapp.MainActivity" />
        <activity android:name="com.example.musicapp.ComponentsList" />
        <activity android:name="com.example.musicapp.ComponentEditorActivity" />
        <activity android:name="com.example.musicapp.ComponentsActivity" />
        <activity android:name="com.example.musicapp.SignUpActivity" />
        <activity android:name="com.example.musicapp.ExercisesActivity" />
        <activity android:name="com.example.musicapp.ExercisesList" />
        <activity android:name="com.example.musicapp.ExerciseEditorActivity" />
        <activity android:name="com.example.musicapp.ExerciseActivity" />
    </application>

</manifest>